<!--            <customFields>{"service":"${serviceName}"}</customFields>-->
<!--        </encoder>-->
<!--    </appender>-->

    <root level="INFO">
<!--        <appender-ref ref="LOGSTASH"/>-->
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>