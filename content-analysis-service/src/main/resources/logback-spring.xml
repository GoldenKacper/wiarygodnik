<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty name="logstashServer" source="logging.logstash.server"/>
    <springProperty name="serviceName" source="spring.application.name"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%white(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1}): %msg%n%throwable</pattern>
        </encoder>
    </appender>

    <!--    <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">-->
    <!--        <destination>${logstashServer}</destination>-->
    <!--        <encoder class="net.logstash.logback.encoder.LogstashEncoder">-->
    <!--            <customFields>{"service":"${serviceName}"}</customFields>-->
    <!--        </encoder>-->
    <!--    </appender>-->

    <root level="INFO">
        <!--        <appender-ref ref="LOGSTASH"/>-->
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>